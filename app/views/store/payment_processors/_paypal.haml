.step.step2
  %h2 Ok, all ready &raquo;
  %p
    Your Order ID:
    %strong= @order[:id]

%form#paypal_form{ :action => "https://www.sandbox.paypal.com/cgi-bin/webscr", :method => :post }
  %input{ :type => :hidden, :name => :cmd, :value => '_s-xclick' }
  %input{ :type => :hidden, :name => :encrypted, :value => @payment.form_values( @order, @complete_url )[:encrypted] }
  %input{ :type => :hidden, :name => :commit, :value => "Checkout" }
  %input.btn.btn-primary{ :type => :submit, :value => "Checkout with PayPal" }

:javascript
  $(document).trigger( 'paymentWidgetLoaded' );
